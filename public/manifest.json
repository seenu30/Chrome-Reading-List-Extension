{
  "manifest_version": 3,
  "name": "Reading List Summarizer",
  "version": "1.0",
  "description": "Accesses the Chrome Reading List and summarizes articles",
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "48": "images/favicon-32x32.png"
      
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ]
}
